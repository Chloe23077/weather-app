<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp2.Pages.WeatherDetailPage"
             Title="WeatherDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Grid.Row="0"
                         Orientation="Horizontal" Margin="5,5,0,10">
                <StackLayout Orientation="Vertical" Margin="10,0,10,0">
                    <Label x:Name="LblCity"
                           FontSize="45"
                           HorizontalTextAlignment="Center"
                           TextColor="Gray"
                           Text="Perth"/>
                    <Label x:Name="LblWeatherDescription"
                           FontSize="Medium"
                           HorizontalTextAlignment="Center"
                           TextColor="SlateGray"
                           Text="Clear Sky"/>
                </StackLayout>
                <Image Grid.Row="2"
                       x:Name="ImgWeatherIcon"
                       VerticalOptions="Center"
                       HeightRequest="100"
                       WidthRequest="100"
                       Margin="10,0,0,0"
                       Source="icon_01d.png"/>
                <Label x:Name="LblTemperature"
                       HorizontalOptions="Start"
                        FontSize="45"
                        FontAttributes="Bold"
                        Margin="20,15,0,0"
                        Text="25Â°C"/>
            </StackLayout>
            <StackLayout Grid.Row="1"
                         Orientation="Vertical">
                <Frame Padding="10" CornerRadius="10" HasShadow="True" BorderColor="LightBlue" 
                       WidthRequest="380" HeightRequest="150" BackgroundColor="LightBlue"
                       Margin="5,5,6,5">
                    <Label Text="Sunrise"
                           FontSize="Default"/>
                </Frame>
                <StackLayout Orientation="Horizontal">
                    <Frame Padding="10" CornerRadius="10" HasShadow="True" BorderColor="LightBlue" 
                           WidthRequest="185" HeightRequest="150" BackgroundColor="LightBlue"
                           Margin="5,5,6,5">
                        <Label Text="UV"
                               FontSize="Default"/>
                    </Frame>
                    <Frame Padding="10" CornerRadius="10" HasShadow="True" BorderColor="LightBlue" 
                           WidthRequest="185" HeightRequest="150" BackgroundColor="LightBlue"
                           Margin="5,5,6,5">
                        <Label Text="airpollution"
                               FontSize="Default"/>
                    </Frame>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Frame Padding="10" CornerRadius="10" HasShadow="True" BorderColor="LightBlue" 
                           WidthRequest="185" HeightRequest="150" BackgroundColor="LightBlue"
                           Margin="5,5,6,5">
                        <Label Text="temp_min"
                               FontSize="Default"/>
                    </Frame>
                    <Frame Padding="10" CornerRadius="10" HasShadow="True" BorderColor="LightBlue" 
                           WidthRequest="185" HeightRequest="150" BackgroundColor="LightBlue"
                           Margin="5,5,6,5">
                        <Label Text="temp_max"
                               FontSize="Default"/>
                    </Frame>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>